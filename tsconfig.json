{
  "include": ["env.d.ts", "**/*.ts", "**/*.tsx", "scripts/**/*"],
  "exclude": [
    "./public",
    "./build",
    "./node_modules/**/*",
    "./packages",
    "**/*.gql",
    "**/*.liquid",
    "./**/dist/*",
    "**/*.scss"
  ],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "baseUrl": ".",
    "paths": {
      "~/presentation/*": ["./app/presentation/components/*"],
      "~/*": ["./app/*"],
      "@/extensions/*": ["./extensions/*"]
    },
    "types": ["vitest/globals", "node", "@shopify/app-bridge-types"],
    "esModuleInterop": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
